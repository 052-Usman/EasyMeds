<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".GetStartedScreen">

    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/delivery_bike"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/delivery_bike"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1.2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/getText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Get The Fastest"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/DeliveryText"
            android:layout_below="@+id/getText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Delivery Medicine For You"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/orderText"
            android:layout_below="@+id/DeliveryText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Order Medicine and get delivery in the"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
        <TextView
            android:layout_below="@+id/orderText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="fastest time in the town"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/getStarted"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/back_color"
            android:padding="15dp"
            android:text="Get Started"
            android:textColor="@color/white"
            app:cornerRadius="15dp" />
    </RelativeLayout>
</LinearLayout>