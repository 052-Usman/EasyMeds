<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/back_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/backPress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="14dp"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/back_icon" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="Welcome !"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="We just need to get a few details from you to get you signed up to the service."
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:elevation="36dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="36dp"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="26dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <EditText
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/user_icon"
                android:drawableTint="@color/black"
                android:hint="XYZ"
                android:inputType="textPersonName"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPlaceholder" />
            <EditText
                android:id="@+id/accountName"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/email_icon"
                android:drawableTint="@color/black"
                android:hint="someone@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPlaceholder" />

            <EditText
                android:id="@+id/password"
                android:textColorHint="@color/colorPlaceholder"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/lock_icon"
                android:drawableTint="@color/black"
                android:hint="Password"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:longClickable="false"
                android:inputType="textPassword"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"/>
            <EditText
                android:id="@+id/phoneNumber"
                android:textColorHint="@color/colorPlaceholder"
                android:layout_marginTop="24dp"
                android:drawableStart="@drawable/phone_icon"
                android:drawableTint="@color/black"
                android:hint="03xxxxxxxxx"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:longClickable="false"
                android:inputType="phone"
                android:background="@drawable/edit_text_background"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">
                <TextView
                    android:id="@+id/signIN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:text="Existing User?"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1" />
                <Button
                    android:id="@+id/joinUS"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:text="Join Us"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/back_color"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:cornerRadius="25dp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>